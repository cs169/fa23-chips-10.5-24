.row.mt-2
    - if flash[:error]
        .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4.alert.alert-danger
            = flash[:error]
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        %h1.text-center
            Edit news article for
            = link_to @representative.name, representative_path(@representative.id)

    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        = render 'search_form',
        form_url: representative_search_my_news_item_path(@representative),
        form_method: :get,
        issues_list: @issues_list
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        .clearfix.mt-3
            .float-right
                = link_to representative_news_items_path(@representative), class: 'btn btn-info' do
                    View news articles
                    %i.fas.fa-arrow-right
