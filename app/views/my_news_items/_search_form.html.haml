= form_with url: form_url, html: { method: form_method } do |f|
    .form-group.row
        .col-sm-2
            = label :issue, 'Issue', class: 'col-form-label'
        .col-sm-10
            = select nil, :issue, issues_list, { include_blank: true }, class: 'form-control'
    .actions
        = f.submit 'Search', class: 'btn btn-primary'
